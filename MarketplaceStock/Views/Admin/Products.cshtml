@using StockDataLayer.Models;
@model IEnumerable<Product>;
@{
    Layout = "_Layout";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link rel="stylesheet" href="~/css/membersArea.css">
    <script src="~/js/site.js" defer></script>
    <script src="~/js/adminProducts.js" defer></script>
</head>
<body>
    <div id="mySidenav" class="sidenav">
        <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
        <a href="Users">Users</a>
        <a href="Products">Products</a>
    </div>
    <div id="main">
        <span onclick="openNav()">&#9776;</span>
    </div>
    <div class="table-container">
        <ul class="table">
            <li class="table-header">
                <div class="col col-1">@Html.DisplayNameFor(model => model.Id)</div>
                <div class="col col-2">@Html.DisplayNameFor(model => model.Name)</div>
                <div class="col col-3">@Html.DisplayNameFor(model => model.Price)</div>
            </li>
            @foreach (var product in Model)
            {
                <li class="table-row">
                    <div class="col col-1" data-label="Id">@product.Id</div>
                    <div class="col col-2" data-label="Username">@product.Name</div>
                    <div class="col col-3" data-label="Email">@product.Price</div>
                </li>
            }
        </ul>
    </div>
    <div class="bottom-right">
        <a class="btn save-btn" href="#" onclick="add()">New product</a>
    </div>
    <div id="popup-window">
        <form asp-controller="Admin" method="post">
            <h3 id="popup-title"></h3>
            <button class="btn close-btn" onclick="closeForm()" asp-action="Close">&times;</button>
            <div>
                <ul class="user-data">
                    <li class="user-data-item"><input name="productName" class="input-box" type="text" placeholder="Name" required></li>
                    <li class="user-data-item"><input name="productImage" class="input-box" type="text" placeholder="Image URL" required></li>
                    <li class="user-data-item"><input name="productPrice" class="input-box" type="text" placeholder="Price" required></li>
                </ul>
            </div>
            <div class="btn-container">
                <ul class="horizontal-list">
                    <li>
                        <button type="submit" class="btn save-btn" asp-action="AddNewProduct">
                            <i class='bx bx-save'></i>
                        </button>
                    </li>
                </ul>
            </div>
        </form>
    </div>
</body>
</html>