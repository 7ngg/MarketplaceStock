@using StockDataLayer.Models;
@model IEnumerable<Product>;
@{
    Layout = "_Layout";
}

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>Bag</title>
        <link href="~/css/basket.css" rel="stylesheet">
    </head>
    <body>
        <div class="container">
            <div class="basket">
                <ul>
                    @foreach (var item in Model)
                    {
                        <li>@item.Name</li>
                    }
            </ul>
            </div>
            <form class="button-container" asp-controller="User" asp-action="Purchase">
                <button class="purchase-btn" type="submit">Purchase</button>
            </form>
        </div>
    </body>
</html>
